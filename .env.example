# Twitch Application Credentials
# Get these from https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here
TWITCH_REDIRECT_URI=http://localhost:3000/auth/callback

# Your Twitch Channel Info
TWITCH_CHANNEL_NAME=your_channel_name
TWITCH_USER_ID=your_user_id

# EventSub Webhook
# For local development, use ngrok or similar to expose localhost
EVENTSUB_CALLBACK_URL=https://your-ngrok-url.ngrok.io/webhooks/callback
EVENTSUB_SECRET=your_random_secret_here

# Server Configuration
PORT=3000
